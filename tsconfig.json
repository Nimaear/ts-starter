{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esNext",
    "target": "es6",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "pretty": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "strictNullChecks": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
